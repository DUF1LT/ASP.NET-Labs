@model IReadOnlyCollection<Lab3.Models.Record>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<table class="table">
  <thead>
    <tr>
      <th scope="col">Surname</th>
      <th scope="col">Phone</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count > 0)
    {
      foreach (var record in Model)
      {
        <tr>
          <td>@record.Surname</td>
          <td>@record.Phone</td>
          <td>@Html.ActionLink("Edit", "Update", new { id = record.Id }) | @Html.ActionLink("Delete", "DeleteConfirmation", new { id = record.Id })</td>
        </tr>
      }
    }
    else
    {
      <tr>
        <td class="text-center" colspan="3"><h3>There are no records in dictionary yet!</h3></td>
      </tr>
    }
  </tbody>
</table>